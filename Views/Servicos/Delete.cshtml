@model GestaoTarefasIPG.Models.Servico

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminação de Serviços</h1>

<h3>Tem a certeza que deseja eliminar este serviço?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Localização
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServicoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('Tem a certeza que quer eliminar o Serviço?')"/> |<a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>
