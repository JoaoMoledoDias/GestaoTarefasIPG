@model GestaoTarefasIPG.Models.Servico

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes dos Serviços do Instituto Poltécnico da Guarda</h1>

<div>
    <h4>Detalhes do serviço</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Localização
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ServicoId"class="btn btn-warning">Editar</a> <a asp-action="Index" class="btn btn-info">Voltar</a>
    
</div>
