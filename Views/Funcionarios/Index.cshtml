@model Pagi_FuncionarioViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionários do Instituto Politécnico da Guarda</h1>

<p>
    <a asp-action="Create" class="btn btb-primary">Criar Novo Funcionário </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Serviço
            </th>
            <th>
                Email
            </th>
            <th>
                Telemóvel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Funcionario)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telemovel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FuncionarioId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.FuncionarioId" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.FuncionarioId" class="btn btn-sm btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.TotalPaginas > 1)
{
    @for (int i = 1; i <= Model.TotalPaginas; i++)
    {
        @if (i == Model.PaginaAtual)
        {
            <a href="#" class="btn btn-primary">@i</a>
        }
        else
        {
            <a asp-action="Index" asp-route-page="@i" class="btn btn-outline-info">@i</a>
        }
    }
}
