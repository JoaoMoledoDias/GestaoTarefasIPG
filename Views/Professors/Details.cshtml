@model GestaoTarefasIPG.Models.Professor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id do professor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfessorID)
        </dd>
        <dt class="col-sm-2">
           Nome Completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Email Completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Número de telemóvel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class="col-sm-2">
            Número de Professor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero_De_Professor)
        </dd>
        <dt class="col-sm-2">
            Número de Gabinete
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero_De_Gabinete)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProfessorID" class="btn btn-sm btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</div>
