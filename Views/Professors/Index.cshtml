@model IEnumerable<GestaoTarefasIPG.Models.Professor>

@{
    ViewData["Title"] = "Index";
}
<div>
    <h1>Lista de Professores</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_De_Professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_De_Gabinete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telemovel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero_De_Professor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero_De_Gabinete)
                </td>
                <td>
                    <a asp-action="Edit" 
                       asp-route-id="@item.ProfessorID" 
                       class="btn btn-sm btn-warning">
                    Editar</a> |
                    <a asp-action="Details" 
                       asp-route-id="@item.ProfessorID" 
                       class="btn btn-sm btn-info">
                    Detalhes</a> |
                    <a asp-action="Delete" 
                       asp-route-id="@item.ProfessorID" 
                       class="btn btn-sm btn-danger" 
                       onclick="return confirm('Tem a certeza que quer eliminar o professor? : @item.ProfessorID' );">
                    Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
