@model IEnumerable<GestaoTarefasIPG.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Professores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.ProfessorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroProfessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroGabinete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadeCurricular)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telemovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroProfessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroGabinete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadeCurricular)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfessorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProfessorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProfessorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
