@model GestaoTarefasIPG.Models.Professor

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfessorID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email Completo</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label">Número de telemóvel</label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero_De_Professor" class="control-label">Número de professor</label>
                <input asp-for="Numero_De_Professor" class="form-control" />
                <span asp-validation-for="Numero_De_Professor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero_De_Gabinete" class="control-label">Número de gabinete</label>
                <input asp-for="Numero_De_Gabinete" class="form-control" />
                <span asp-validation-for="Numero_De_Gabinete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
